    script(src="https://cdn.jsdelivr.net/npm/js-cookie@beta/dist/js.cookie.min.js")
    script(src="/socket.io/socket.io.js")
    script.
        const socket = io();
        $(".logout").on("click", () => {
            Cookies.remove("authorization")
            window.location.href = "/"
        });
        (function () {
          socket.emit("queue", { amount: 1 });
        })();
        socket.on("wait", (data) => {
          console.log(data);
        });
        socket.on("overload", (data) => {
          console.log(data);
        })
        socket.on("turnTo", (data) => {
          console.log(data);
        })
        socket.on("error", (data) => {
          console.log(data);
        })